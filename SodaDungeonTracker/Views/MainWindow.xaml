<controls:MetroWindow x:Class="SodaDungeonTracker.Views.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:dataObjects="clr-namespace:SodaDungeonTracker.DataObjects"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:viewmodels="clr-namespace:SodaDungeonTracker.ViewModels"
                      x:Name="MetroWindow"
                      Title="Soda Dungeon Tracker"
                      Width="525"
                      Height="350"
                      BorderBrush="{StaticResource AccentColorBrush}"
                      BorderThickness="1"
                      Icon="..\Resources\icon.ico"
                      Loaded="MetroWindow_Loaded"
                      NonActiveWindowTitleBrush="{Binding ElementName=MetroWindow, Path=WindowTitleBrush}"
                      mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <controls:MetroWindow.DataContext>
        <viewmodels:MainWindowViewModel />
    </controls:MetroWindow.DataContext>
    <Grid>
        <DataGrid x:Name="Datagrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  ItemsSource="{Binding Tracks}">
            <DataGrid.Columns>
                <DataGridTextColumn Width="Auto"
                                    Binding="{Binding Dimension}"
                                    Header="Dimension" />
                <DataGridCheckBoxColumn Width="Auto"
                                        Binding="{Binding LairOfDespair}"
                                        Header="Lair of Despair" />
                <DataGridTemplateColumn Width="*"
                                        Header="Setup"
                                        IsReadOnly="True"
                                        Visibility="Visible">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="dataObjects:ClassSetup">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="25"
                                       Height="25"
                                       Source="{Binding Setup.Class1.Image, Mode=OneWay}"
                                       ToolTip="{Binding Setup.Class1.Name, Mode=OneWay}" />
                                <Image Width="25"
                                       Height="25"
                                       Source="{Binding Setup.Class2.Image, Mode=OneWay}"
                                       ToolTip="{Binding Setup.Class2.Name, Mode=OneWay}" />
                                <Image Width="25"
                                       Height="25"
                                       Source="{Binding Setup.Class3.Image, Mode=OneWay}"
                                       ToolTip="{Binding Setup.Class3.Name, Mode=OneWay}" />
                                <Image Width="25"
                                       Height="25"
                                       Source="{Binding Setup.Class4.Image, Mode=OneWay}"
                                       ToolTip="{Binding Setup.Class4.Name, Mode=OneWay}" />
                                <Image Width="25"
                                       Height="25"
                                       Source="{Binding Setup.Class5.Image, Mode=OneWay}"
                                       ToolTip="{Binding Setup.Class5.Name, Mode=OneWay}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</controls:MetroWindow>
